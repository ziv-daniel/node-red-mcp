# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Node-RED Configuration
NODERED_URL=your.nodered.url
NODERED_USERNAME=uname
NODERED_PASSWORD=password
NODERED_API_TOKEN=
NODERED_ADMIN_AUTH=false

# MCP Server Configuration
MCP_SERVER_NAME=nodered-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=stdio
MCP_HTTP_PORT=3001

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
API_KEY=your-api-key-for-external-access

# Claude Integration Settings
CLAUDE_AUTH_REQUIRED=false
CLAUDE_COMPATIBLE_MODE=true
DEBUG_CLAUDE_CONNECTIONS=true
ACCEPT_ANY_BEARER_TOKEN=true
AUTH_FALLBACK_ENABLED=true

# SSE Configuration
SSE_HEARTBEAT_INTERVAL=30000
SSE_MAX_CONNECTIONS=100
SSE_RETRY_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/mcp-nodered-server.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Redis Configuration (for session storage, optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000

# Development/Debug Configuration
DEBUG=mcp:*
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Docker Configuration
DOCKER_INTERNAL_PORT=3000
DOCKER_HOST_PORT=3000